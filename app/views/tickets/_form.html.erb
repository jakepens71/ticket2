<div style="text-align:center">
	<%= form_for(@ticket) do |f| %>
	  <% if @ticket.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

	      <ul>
	      <% @ticket.errors.full_messages.each do |message| %>
		<li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	  <div>
	    <%= f.label :title %><br>
	    <%= f.text_field :title, {:class => "textfield"} %>
	  </div>
	  <div id="ticketBody">
	    <%= f.label :body %><br>
	    <%= f.text_area :body %>
	  </div>
	</br>
	  <div class="field">
	    <%= f.label "Severity" %><br>
	    <%= f.select :level, [["Low", 1], ["Medium", 2], ["High", 3]] %>
	  </div>
	</br>
	  <div class="field">
	    <%= f.label :assigned_to %><br>
	    <%= f.collection_select(:assigned_to, User.where("admin = ?", "true"), :id, :name, :prompt => 'Select', :class => 'asignee') %>
	  </div>
	</br>
	  <div class="actions">
	    <%= f.submit %>
	  </div>
	<% end %>
</div>